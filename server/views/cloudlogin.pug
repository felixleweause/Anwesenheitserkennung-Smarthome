block variables
doctype html
html
  block head
    meta(charset="utf-8")
    link(rel="shortcut icon", href="/public/beta.ico")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="theme-color", content="#000000")
    title #{title}
    <link rel="stylesheet" href="/public/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
  
    body
        div.container
            h3 Melden sie sich mit ihrem Beta42 Account an
            form(action='/cloud/login' method='POST')
                .form-group
                    label User/Mail
                    input#username.form-control(type='text' name='username')
                .form-group
                    label Passwort
                    input#password.form-control(type='password' name='password')
                .modal-footer
                    button.btn.btn-primary(type='submit') Anmelden
                    a(style="text-decoration: none;" data-toggle='modal' data-target='#exampleModal').btn.btn-primary Account erstellen 
                    a(style="text-decoration: none;" data-toggle='modal' data-target='#codeModal').btn.btn-primary Account verifizieren 
        #exampleModal.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
            .modal-dialog(style='background-color: white' role='document')
                .modal-content
                    .modal-header
                        h5#exampleModalLabel.modal-title Account in der Beta42 Cloud erstellen || Nach der Registrierung m√ºssen sie vor dem login ihren per mail zugesendeten code verfizieren
                        button.close(type='button' data-dismiss='modal' aria-label='Close')
                        span(aria-hidden='true') &times;
                    .modal-body
                        form(action='/cloud/register' method='POST')
                            .form-group
                                label Email Addresse
                                input#username.form-control(type='text' name='username')
                            .form-group
                                label Passwort
                                input#ble_mac.form-control(type='password' name='password')
                            .modal-footer
                                button.btn.btn-secondary(type='button' data-dismiss='modal') Close
                                button.btn.btn-primary(type='submit') Regristieren
        #codeModal.modal.fade(tabindex='-1' aria-labelledby='codeModalLabel' aria-hidden='true')
            .modal-dialog(style='background-color: white' role='document')
                .modal-content
                    .modal-header
                        h5#exampleModalLabel.modal-title Geben sie hier ihren Code ein den sie per Mail erhalten haben
                        button.close(type='button' data-dismiss='modal' aria-label='Close')
                        span(aria-hidden='true') &times;
                    .modal-body
                        form(action='/cloud/codeconfirm' method='POST')
                            .form-group
                                label Code
                                input#code.form-control(type='text' name='code')
                            .modal-footer
                                button.btn.btn-secondary(type='button' data-dismiss='modal') Close
                                button.btn.btn-primary(type='submit') Verifizieren
